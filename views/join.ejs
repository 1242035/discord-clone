<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Discord clone chat">
    <meta name="author" content="Thal Marcelin">

    <title>MiniCord | Join <%= channels.channel_name %></title>

    <!-- Bootstrap Core CSS -->
    <link href="/stylesheets/fontawesome-all.min.css" rel="stylesheet">
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/stylesheets/jquery.mCustomScrollbar.css" rel="stylesheet">
    <link href="/stylesheets/main.css?rev=@@hash" rel="stylesheet">
    <link href="/stylesheets/main-responsive.css?rev=@@hash" rel="stylesheet">
    
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body id="blank">

    <div id="bg">
        <div id="particles-js"></div>
    </div>

    <!-- Navigation -->
    <nav class="navbar" role="navigation">
        <div class="container-fluid justify-center">
            <a class="navbar-brand navbar-brand-center" href="/">MiniCord</a>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="invitation">
        <div class="invitation-header">
            You've been invited to join
        </div>
        <div class="invitation-info">
            <div class="col">
                <div class="group-avatar"><img src="/img/placeholder-avatar2.jpg" /></div>
            </div>
            <div class="col">
                <h6 class="mb-10"><%= channel.channel_name %></h6>
                <ul class="group-stats">
                    <li><%= channel.participant.length %> users registered</li>
                    <% var count = 0; %>
                    <% channel.participant.forEach(function(participant){ %>
                        <% if(participant.online === true){ %>
                            <% count++ ; %>
                        <% } %>
                    <% }); %>
                    <li><%= count %> online users</li>
                </ul>
                <a href="/" class="decline link-underline">Decline Invitation</a>
            </div>
        </div>
        <div class="invitation-join">
                <form action="/channel/join/<%= channel._id %>" method="POST">
                    <button type="submit" class="btn btn-block btn-primary">Join</button>
                </form> 
        </div>
    </div>


    <!-- jQuery Version 1.11.1 -->
    <script src="/js/libs/jquery-3.2.1.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/js/libs/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="/js/libs/jquery.mCustomScrollbar.min.js"></script>
    <script src="/js/libs/app.js?rev=@@hash"></script>

</body>

</html>
