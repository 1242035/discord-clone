<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Simple Discord Chat Room">
    <meta name="author" content="Thal Marcelin">

    <title>Register | MiniCord</title>

    <!-- Bootstrap Core CSS -->
    <link href="/stylesheets/fontawesome-all.min.css" rel="stylesheet">
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/stylesheets/jquery.mCustomScrollbar.css" rel="stylesheet">
    <link href="/stylesheets/main.css?rev=@@hash" rel="stylesheet">
    <link href="/stylesheets/main-responsive.css?rev=@@hash" rel="stylesheet">
    
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="bg">
        <div id="particles-js"></div>
    </div>

    <!-- Navigation -->
    <nav class="navbar" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">MiniCord</a>
            </div>
            <div class="navbar-menu">
                <a href="/users/login" class="btn btn-primary">Login</a>
            </div>
        </div>
    </nav>


    <!-- Page Content -->
    <div id="sidebar">
        <ul class="sidebar-menu">
            <li><a class="current-server" data-toggle="tooltip" data-placement="right" data-title="Current Group">O</a></li>
        </ul>
    </div>
    <div class="page-single">
        <div class="modal-block modal-visible">
            <div class="modal-brand">
                <div class="modal-brand-caption">
                    <div class="logo">Mini<span>Cord</span></div>
                </div>
            </div>
            <div class="modal-block-content">
                <h3>Register a new account!</h3>
                <form class="form-horizontal" action="/users/register" method="POST">
                    <%if(error && error.length > 0){%>
                        <%= error %>
                    <%}%>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="r_email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="r_password" class="form-control" />
                    </div>
                    <!-- <div class="form-group">
                        <label for="r_cpassword">Confirm Password</label>
                        <input type="password" name="r_cpassword" id="r_cpassword" class="form-control" />
                    </div> -->
                    <div class="form-group" >
                        <p class="help-block"><a class="link-underline">Forgot your password?</a></p>
                        <p class="help-block2 mb-25">Already have an account? Login <a href="/users/login" class="clr-primary link-underline">here</a>.</p>
                        <button type="submit" class="btn btn-block btn-radius btn-primary">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- jQuery Version 1.11.1 -->
    <script src="js/libs/jquery-3.2.1.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/libs/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="js/libs/jquery.mCustomScrollbar.min.js"></script>
    <script src="js/libs/app.js?rev=@@hash"></script>

</body>

</html>
